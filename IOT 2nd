import Adafruit_DHT
import time
import RPi.GPIO as GPIO
import requests

# Set up GPIO and sensor
GPIO.setmode(GPIO.BCM)
sensor = Adafruit_DHT.DHT11
pin = 23

# Function to send data to an API
def send_to_api(temperature, humidity):
    api_key = "KHT1X5SYXNYOA1E2"
    url = "https://api.thingspeak.com/update"
    payload = {
        'api_key': api_key,
        'field1': temperature,
        'field2': humidity
    }
    try:
        response = requests.post(url, params=payload)
        if response.status_code == 200:
            print("Data sent successfully!")
        else:
            print("Failed to send data. Status code:", response.status_code)
    except requests.exceptions.RequestException as e:
        print("Error sending data:", e)

while True:
    humidity, temperature = Adafruit_DHT.read_retry(sensor, pin)
    if humidity is None or temperature is None:
        print("Failed to get reading. Try Again!")
    else:
        print("Temp={0:0.1f}Â°C Humidity={1:0.1f}%".format(temperature, humidity))
        send_to_api(temperature, humidity)
    time.sleep(2)
